@model Intra.Models.User
@{
    ViewData["Title"] = "Users";
}
<div class="row">
    <div class="col-12">
        <h1 class="text-center text-info mt-5 mb-5">@ViewData["Title"]</h1>
        <table class="table table-hover">
            <thead class="bg-info text-white text-center">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>DOB</th>
                <th>Rate</th>
                <th>Hours</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="text-center">
            @foreach (var user in ViewBag.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Birthday</td>
                    <td>@user.Rate</td>
                    <td>@user.Hours</td>
                    <td>
                        <a title="Delete User" asp-action="DeleteUser" asp-controller="User" class="btn btn-danger btn-sm btn-round">&times;</a>
                        <a title="Edit User" href="" class="btn btn-warning btn-sm btn-round">&minus;</a>
                        <a title="View User Profile" href="users/@user.UserId" class="btn btn-info btn-sm btn-round">&CirclePlus;</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-4">
        <a asp-action="AddUserPage" asp-controller="User" class="btn btn-success btn-round">User &plus;</a>
    </div>
</div>