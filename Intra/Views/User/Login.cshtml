@model Intra.Models.UserViewModel.LoginUser
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="bg-danger">
            <p class="text-center">@ViewBag.errors</p>
        </div>
        <div class="bg-success">
            <p class="text-center">@ViewBag.success</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form asp-action="LoginUser" asp-controller="User" method="POST">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Email"></span>
                </div>
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="Password"></span>
                </div>
                <input asp-for="Password" class="form-control" placeholder="Password">
            </div>
            <input type="submit" value="Login" class="btn btn-success btn-round">
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-3">
        <p class="lead text-center">Need to register instead? <a asp-action="Register" asp-controller="User" asp-area="" class="btn btn-round btn-info">Register</a></p>
    </div>
</div>


